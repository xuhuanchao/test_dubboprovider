<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans        
       http://www.springframework.org/schema/beans/spring-beans.xsd        
       http://code.alibabatech.com/schema/dubbo        
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

    <!--当前项目在整个分布式架构里面的唯一名称，计算依赖关系的标签-->
    <dubbo:application name="testdubbo-provider" owner="xhc"/>

    <!-- <dubbo:monitor protocol="registry"/> -->

    <!--dubbo这个服务所要暴露的服务地址所对应的注册中心-->
    <dubbo:registry protocol="zookeeper" address="192.168.127.129:2181,192.168.127.130:2181,192.168.127.131:2181"/>
    <!-- <dubbo:registry address="multicast://224.5.6.7:1234" /> -->


    <!--当前服务发布所依赖的协议；webserovice、Thrift、Hessain、http-->
    <dubbo:protocol name="dubbo" port="20880"/>

    <!--服务发布的配置，需要暴露的服务接口-->
    <dubbo:service
            interface="com.xhc.test.dubboclient.service.IProductService"
            ref="productServiceImpl"/>
    <dubbo:service interface="com.xhc.test.dubboclient.service.IDubboService" ref="dubboServiceImpl"/>
    
    <import resource="spring-cfg.xml"/>
</beans>